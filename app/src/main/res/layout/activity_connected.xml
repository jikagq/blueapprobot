<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.example.a8673294.bttest.ActivityConnected">

        <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/buttonSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="-4dp" />


            <EditText
                android:id="@+id/editTextToSend"
                android:layout_width="224dp"
                android:layout_height="44dp"
                android:singleLine="false"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintTop_toTopOf="@+id/buttonSend"
                app:layout_constraintLeft_toRightOf="@+id/buttonSend"
                android:layout_marginTop="0dp"
                app:layout_constraintHorizontal_bias="0.777" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send:"
                tools:layout_conversion_absoluteX="384dp"
                tools:layout_conversion_absoluteY="14dp"
                tools:layout_conversion_absoluteWidth="0dp"
                tools:layout_conversion_absoluteHeight="82dp"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="16dp" />

            <ImageButton
                android:id="@+id/rc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/arrow_down_float"
                tools:layout_editor_absoluteX="172dp"
                tools:layout_editor_absoluteY="281dp" />

            <ImageButton
                android:id="@+id/av"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/arrow_up_float"
                tools:layout_editor_absoluteX="172dp"
                tools:layout_editor_absoluteY="189dp" />

            <ImageButton
                android:id="@+id/ga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="90"
                app:srcCompat="@android:drawable/arrow_down_float"
                tools:layout_editor_absoluteX="92dp"
                tools:layout_editor_absoluteY="239dp" />

            <Button
                android:id="@+id/st"
                android:layout_width="71dp"
                android:layout_height="40dp"
                android:text="STOP"
                tools:layout_editor_absoluteX="157dp"
                tools:layout_editor_absoluteY="235dp" />

            <ImageButton
                android:id="@+id/dr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="90"
                app:srcCompat="@android:drawable/arrow_up_float"
                tools:layout_editor_absoluteX="268dp"
                tools:layout_editor_absoluteY="239dp" />

            <Switch
                android:id="@+id/mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch"
                tools:layout_editor_absoluteX="151dp"
                tools:layout_editor_absoluteY="102dp" />


        </android.support.constraint.ConstraintLayout>



    </RelativeLayout>

