<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.example.a8673294.bttest.ActivityConnected">

        <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="1">

            <Button
                android:id="@+id/buttonSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-4dp"
                android:text="Send"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintTop_creator="1" />


            <EditText
                android:id="@+id/editTextToSend"
                android:layout_width="165dp"
                android:layout_height="47dp"
                android:singleLine="false"
                app:layout_constraintHorizontal_bias="0.777"
                app:layout_constraintLeft_toRightOf="@+id/buttonSend"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/buttonSend"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Debug:"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_conversion_absoluteHeight="82dp"
                tools:layout_conversion_absoluteWidth="0dp"
                tools:layout_conversion_absoluteX="384dp"
                tools:layout_conversion_absoluteY="14dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageButton
                android:id="@+id/rc"
                android:layout_width="62dp"
                android:layout_height="64dp"
                android:layout_marginStart="156dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/st"
                app:srcCompat="@android:drawable/arrow_down_float" />

            <ImageButton
                android:id="@+id/av"
                android:layout_width="68dp"
                android:layout_height="65dp"
                android:layout_marginStart="156dp"
                android:layout_marginTop="132dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/arrow_up_float" />

            <ImageButton
                android:id="@+id/ga"
                android:layout_width="61dp"
                android:layout_height="69dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="220dp"
                android:rotation="90"
                app:layout_constraintEnd_toStartOf="@+id/st"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/arrow_down_float" />

            <Button
                android:id="@+id/st"
                android:layout_width="71dp"
                android:layout_height="40dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="232dp"
                android:text="STOP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/dr"
                android:layout_width="68dp"
                android:layout_height="65dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="220dp"
                android:rotation="90"
                app:layout_constraintStart_toEndOf="@+id/st"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/arrow_up_float" />

            <Button
                android:id="@+id/mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="116dp"
                android:layout_marginTop="72dp"
                android:text="Mode Manuel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </android.support.constraint.ConstraintLayout>



    </RelativeLayout>

